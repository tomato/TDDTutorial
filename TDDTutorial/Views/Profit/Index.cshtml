@model TDDTutorial.Models.Project

<h2>Stories</h2>

<ol>
    <li>Should show % profit for each sprint</li>
    <li>Should show total Revenue and Cost for all sprints</li>
    <li>Should show total % profit</li>
    
</ol>

<h2>Team Profit</h2>

<table class="table">
    <tr>
        <th>Sprint</th>
        <th>Cost</th>
        <th>Revenue</th>
    </tr>
    @foreach (var sprint in Model.Sprints)
    {
        <tr>
            <td>@sprint.Id</td>
            <td>@sprint.Cost</td>
            <td>@sprint.Revenue</td>
        </tr>
    }
</table>

